# Global Agent Configuration
[agent]
  hostname = "{{ telegraf_hostname }}"
  flush_interval = "{{ telegraf_interval }}"
  interval = "{{ telegraf_interval }}"

# Input Plugins
[[inputs.cpu]]
    percpu = true
    totalcpu = true
    collect_cpu_time = false
    report_active = false
[[inputs.disk]]
    ignore_fs = ["tmpfs", "devtmpfs", "devfs"]
[[inputs.io]]
[[inputs.mem]]
[[inputs.net]]
  interfaces = ["{{ telegraf_net_interface }}"]
[[inputs.system]]
[[inputs.swap]]
[[inputs.netstat]]
[[inputs.processes]]
[[inputs.kernel]]

# Output Plugin InfluxDB
[[outputs.influxdb]]
  database = "{{ telegraf_database }}"
  urls = [ "http://127.0.0.1:8086" ]
  username = "{{ telegraf_username }}"
  password = "{{ telegraf_password }}"

